/* pages/profile/profile/prolife.wxss */

.top{
    width: 100%;
    height: 24vh;
    background-color: #c3c;
}

.top-nav{
    margin-top: 0;
}

.user-img{
    border-radius: 50%;
    border: 1rpx solid #ccc;
    width: 150rpx;
    height: 150rpx;
    overflow: hidden;
}

.share{
  position: relative;
}
.share .share-btn:after{
  border: none;
}
.share .share-btn{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: .1;
}

.top {
  width: 100%;
  height: 12rem;
  position: relative;
}
.top .top-bc {
  width: 100%;
  height: 100%;

}

.top .user {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 6rem;
  height: 6rem;
  text-align: center;
}


.top .user .user-img {
  border-radius: 50%;
  width: 5rem;
  height: 5rem;
}

.top .user .user-name {
  font-size: 14px;
  font-family: "Microsoft Yahei";
}


.top .show-user-btn {
  font-size: 12px;
  color: #fff;
  background-color: springgreen;
  width: 4rem;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}