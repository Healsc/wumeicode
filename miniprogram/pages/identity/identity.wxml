
<form bindsubmit="formSubmit" bindreset="formReset">
    <view class="cu-form-group margin-top pad-left">
        <view class="title">姓名</view>
        <input type='text' name="name"   placeholder="你的真实姓名" placeholder-class="text-margin"></input>
    </view>
  <view class="cu-form-group pad-left">
    <view class="title">性别</view>
    <radio-group class="radio-group text-center" bindchange="radioChange">
        <radio-group name="sex">
            <label><radio value="man" checked='checked'/>男</label>
            <label><radio value="woman"/>女</label>
        </radio-group>
    </radio-group>
    </view>
        <view class="cu-form-group pad-left">
        <view class="title">学号</view>
        <input type="text" name="studentNumber" placeholder="请填写"  placeholder-class="text-margin"></input>
    </view>
        <view class="cu-form-group pad-left">
        <view class="title">学院</view>
        <input type="numtextber" name="academy" placeholder="请填写" placeholder-class="text-margin"></input>
    </view>
        <view class="cu-form-group pad-left">
        <view class="title">班级</view>
        <input type="text" name="mahor" placeholder="请填写" placeholder-class="text-margin"></input>
    </view>


    <view class="cu-form-group margin-top pad-left">
        <view class="title">第一志愿部门</view>
        <picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
        <view class="picker">
            {{index?picker[index]:'请选择部门'}}
        </view>
        </picker>
    </view>

    <view class="cu-form-group pad-left">
        <view class="title">第二志愿部门</view>
        <picker bindchange="PickerChange2" value="{{index2}}" range="{{picker2}}">
        <view class="picker">
            {{index2?picker[index2]:'请选择部门'}}
        </view>
        </picker>
    </view>

    <view class="cu-form-group pad-left">
        <view class="title">是否服从调剂</view>
        <radio-group class="radio-group text-center" bindchange="radioChange">
            <radio-group name="yiyuan">
                <label><radio value="fucong" checked='checked'/>是</label>
                <label><radio value="bufucong"/>否</label>
            </radio-group>
        </radio-group>
    </view>

    <view class="padding flex flex-direction bg-white margin-top">
        <button form-type="submit" class="cu-btn bg-green margin-tb-sm lg" >确认提交</button>
    </view>
</form>




